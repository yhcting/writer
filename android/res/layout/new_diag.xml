<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <!-- Title -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="5dip"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:src="@drawable/newsheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="@string/newsheet"
            android:textColor="#ffffffff"
            android:textSize="24sp"
            android:layout_marginLeft="5dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
    <!-- Content -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="5dip"
        android:layout_marginRight="7dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- Width part -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="@string/width"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <ImageButton android:id="@+id/wminus"
                    android:background="@android:color/transparent"
                    android:src="@drawable/minus_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView android:id="@+id/wtext"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:layout_marginLeft="7dip"
                    android:layout_marginRight="7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageButton android:id="@+id/wplus"
                    android:background="@android:color/transparent"
                    android:src="@drawable/plus_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
        
        <!-- Height part -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="15dip"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="@string/height"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <ImageButton android:id="@+id/hminus"
                    android:background="@android:color/transparent"
                    android:src="@drawable/minus_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView android:id="@+id/htext"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:layout_marginLeft="7dip"
                    android:layout_marginRight="7dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageButton android:id="@+id/hplus"
                    android:background="@android:color/transparent"
                    android:src="@drawable/plus_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>            
        </LinearLayout>
    </LinearLayout>
    
    <!-- Bottom Button -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="7dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button android:id="@+id/ok"
            android:text="@string/ok"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            />
        <Button android:id="@+id/cancel"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>